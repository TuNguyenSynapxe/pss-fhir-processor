@model List<MOH.HealthierSG.Plugins.PSS.FhirProcessor.WebApp.Models.TestCaseModel>
@{
    ViewBag.Title = "Test Suite";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <style>
        body { font-family: Arial, sans-serif; margin: 20px; }
        .container { max-width: 1200px; margin: 0 auto; }
        table { width: 100%; border-collapse: collapse; margin: 20px 0; }
        th, td { padding: 10px; border: 1px solid #ddd; text-align: left; }
        th { background-color: #f5f5f5; }
        .passed { background-color: #d4edda; }
        .failed { background-color: #f8d7da; }
        button { padding: 5px 15px; }
    </style>
</head>
<body>
    <div class="container">
        <h1>PSS FHIR Test Suite</h1>
        
        <div>
            <button onclick="runAllTests()">Run All Tests</button>
            <span id="summary"></span>
        </div>
        
        <table>
            <thead>
                <tr>
                    <th>Test Name</th>
                    <th>Description</th>
                    <th>Expected</th>
                    <th>Action</th>
                    <th>Result</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var test in Model)
                {
                    <tr id="row-@test.Name">
                        <td>@test.Name</td>
                        <td>@test.Description</td>
                        <td>@(test.ExpectedIsValid ? "Valid" : "Invalid")</td>
                        <td>
                            <button onclick="runTest('@test.Name')">Run</button>
                        </td>
                        <td id="result-@test.Name">-</td>
                    </tr>
                }
            </tbody>
        </table>
        
        <div>
            <a href="@Url.Action("Index", "Playground")">Back to Playground</a>
        </div>
    </div>
    
    <script>
        function runTest(testName) {
            document.getElementById('result-' + testName).innerHTML = 'Running...';
            
            fetch('@Url.Action("RunTest", "Test")', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ testName: testName })
            })
            .then(r => r.json())
            .then(data => {
                var cell = document.getElementById('result-' + testName);
                var row = document.getElementById('row-' + testName);
                
                if (data.passed) {
                    cell.innerHTML = 'PASSED';
                    row.className = 'passed';
                } else {
                    cell.innerHTML = 'FAILED (Expected: ' + data.expectedValid + ', Actual: ' + data.actualValid + ')';
                    row.className = 'failed';
                }
            });
        }
        
        function runAllTests() {
            document.getElementById('summary').innerHTML = 'Running all tests...';
            
            fetch('@Url.Action("RunAllTests", "Test")', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' }
            })
            .then(r => r.json())
            .then(data => {
                document.getElementById('summary').innerHTML = 
                    'Total: ' + data.totalTests + ' | Passed: ' + data.passedTests + ' | Failed: ' + data.failedTests;
                
                data.results.forEach(function(result) {
                    var cell = document.getElementById('result-' + result.testName);
                    var row = document.getElementById('row-' + result.testName);
                    
                    if (result.passed) {
                        cell.innerHTML = 'PASSED';
                        row.className = 'passed';
                    } else {
                        cell.innerHTML = 'FAILED';
                        row.className = 'failed';
                    }
                });
            });
        }
    </script>
</body>
</html>
